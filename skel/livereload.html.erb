<% if @options[:nonce] %>
<script type="text/javascript" nonce="<%= @options[:nonce] %>">
  RACK_LIVERELOAD_PORT = <%= @options[:live_reload_port] %>;
</script>
<% else %>
<script type="text/javascript">
  RACK_LIVERELOAD_PORT = <%= @options[:live_reload_port] %>;
</script>
<% end %>
<script type="text/javascript" src="<%= livereload_source %>"></script>
